<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/pale_silver"
    android:layout_height="match_parent"
    tools:context=".StartFragment">

    <Button
        android:id="@+id/RecyclerStartPageButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Recycler"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/bone"
        android:backgroundTint="@color/copper_rose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="50dp"/>

    <Button
        android:id="@+id/ViewPagerStartPageButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:layout_marginTop="48dp"
        android:text="ViewPager"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/bone"
        android:backgroundTint="@color/copper_rose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerStartPageButton" />

    <Button
        android:id="@+id/knopka3StartPageButton"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_margin="50dp"
        android:layout_marginTop="48dp"
        android:text="lISTVIEW"
        android:textColor="@color/bone"
        android:backgroundTint="@color/copper_rose"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewPagerStartPageButton" />


</androidx.constraintlayout.widget.ConstraintLayout>