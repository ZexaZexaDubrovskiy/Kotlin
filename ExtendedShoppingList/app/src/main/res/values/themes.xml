<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExtendedShoppingList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Цвет Toolbar -->
        <item name="colorPrimary">@color/cl_tussock</item>
        <!-- Цвет заголовка -->
        <item name="colorPrimaryVariant">@color/cl_spice</item>
        <item name="colorOnPrimary">@color/cl_white</item>
        <!-- Secondary brand color. -->
        <!-- Цвет FloatingActionButton -->
        <item name="colorSecondary">@color/cl_tussock</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Цветовая схема Alert-диалогов -->
        <item name="android:alertDialogTheme">@style/StyleForAlertDialog</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="StyleForTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/cl_spice</item>
    </style>

    <style name="StyleForCaptionTextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cl_spice</item>
    </style>

    <style name="StyleForEditText">
        <item name="android:layout_marginStart">-4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
        <item name="android:textColor">@color/cl_dove_gray</item>
    </style>

    <style name="StyleForMaterialButton">
        <item name="cornerRadius">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cl_spice</item>
    </style>

    <!-- Стиль тулбара. -->
    <style name="StyleForToolbar">
        <!-- Цвет фона тулбара. -->
        <item name="android:background">@color/cl_tussock</item>
        <item name="android:elevation">8dp</item>
        <item name="theme">@style/ThemeForToobar</item>
    </style>

    <!-- Цветовая тема тулбара. -->
    <style name="ThemeForToobar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- Цвет фона меню тулбара. -->
        <item name="popupMenuBackground">@color/cl_spice</item>
        <!-- Цвет текста в меню тулбара. -->
        <item name="android:textColor">@color/cl_double_spanish_white_25</item>
        <!-- Цвет надписи на тулбаре и иконок в меню. -->
        <item name="android:textColorPrimary">@color/cl_spice</item>
    </style>

    <style name="StyleForAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Цвет фона. -->
        <item name="android:background">@color/cl_double_spanish_white_25</item>
        <!-- Цвет заголовка диалога. -->
        <item name="android:textColor">@color/cl_spice</item>
        <!-- Цвет текста в списке. -->
        <item name="android:textColorAlertDialogListItem">@color/cl_spice</item>
        <!-- Цвет пустой галки. -->
        <item name="android:colorControlNormal">@color/cl_spice</item>
        <!-- Цвет выбранной галки. -->
        <item name="android:colorControlActivated">@color/cl_spice</item>
        <!-- Цвета кнопок. -->
        <item name="android:buttonBarNegativeButtonStyle">@style/StyleForNegativeButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/StyleForNegativeButton </item>
    </style>

    <!-- Цвет негативной кнопки. -->
    <style name="StyleForNegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/cl_spice</item>
    </style>

    <!-- Цвет позитивной кнопки. -->
    <style name="StyleForPositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/cl_double_spanish_white_25</item>
        <item name="android:backgroundTint">@color/cl_spice</item>
    </style>

</resources>